p {
  margin: 0 0 0 0;
  padding: 0 0 0 0;
}

button {
  border-radius: 16px;
  background-color: #9339f9;
  padding: 8px 16px;
  border: 0;
  color: #fff;
  font-size: 16px;
  transition: background-color 200ms ease;
  outline: none;
  cursor: pointer;
  font-weight: 700;
}

button + button {
  margin-left: 8px;
}

button:hover,
button:focus,
button.active {
  background-color: #f353d0;
}
