html {
  box-sizing: border-box;
}
*,
*:before,
*:after {
  box-sizing: inherit;
}
html,
body {
  margin: 0;
  padding: 0;
  /* font-family: "Poppins", sans-serif;
  font-weight: 500;
  background-image: radial-gradient(circle at 62% 44%, #333333, #222222); */
}
.root {
  display: flex;
  height: 100vh;
  flex-direction: column;
}

.main {
  flex: 1;
  overflow: auto;
  background: #222222;
  color: white;
  padding: 10px;
}

header,
footer {
  background: #333333;
  padding: 10px;
}

